<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context="kr.co.company.jjigawesome.LoginActivity">

    <ImageView
        android:id="@+id/image_login_logo2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_logo_01"/>

    <LinearLayout
        android:id="@+id/linear_login_allView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <Space
            android:id="@+id/space_01"
            android:layout_width="match_parent"
            android:layout_height="80.33dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_login_logo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center" />

        <Space
            android:id="@+id/space_02"
            android:layout_width="match_parent"
            android:layout_height="38.00dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linear_login_smallView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_login_id"
                android:layout_width="290.33dp"
                android:layout_height="46.33dp"
                android:background="#ffffff"
                android:fontFamily="@font/notosans"
                android:hint="@string/id"
                android:inputType="textEmailAddress"
                android:paddingLeft="18.33dp"
                android:textColorHint="#cacaca"
                android:textSize="13.33dp" />

            <EditText
                android:id="@+id/edit_login_password"
                android:layout_width="290.33dp"
                android:layout_height="46.33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.67dp"
                android:background="#ffffff"
                android:fontFamily="@font/notosans"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="18.33dp"
                android:textColorHint="#cacaca"
                android:textSize="13.33dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.67dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_login"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/check_box"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans"
                    android:paddingLeft="18.33dp"
                    android:text="@string/keeplogin"
                    android:textColor="#ffffff"
                    android:textSize="13.33dp" />

            </LinearLayout>


            <Button
                android:id="@+id/button_login"
                android:layout_width="290.33dp"
                android:layout_height="46.33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22.00dp"
                android:background="#2681ea"
                android:fontFamily="@font/notosans"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textSize="13.33dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_login_findid"
                    android:layout_width="96.67dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="centerCrop"/>

                <ImageButton
                    android:id="@+id/button_login_findpw"
                    android:layout_width="96.67dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/button_login_signup"
                    android:layout_width="96.67dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:id="@+id/space_03"
            android:layout_width="match_parent"
            android:layout_height="177.00dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
