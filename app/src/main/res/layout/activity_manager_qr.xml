<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.company.jjigawesome.ManagerActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_manager_qr"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_manager_qr_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/textview_manager_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosans"
            android:text="매니저 회원"
            android:textColor="#000000"
            android:textSize="15.33sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#b2b2b2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="43.33dp" />

    <TextView
        android:id="@+id/textview_manager_qr_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:fontFamily="@font/notosans"
        android:text="서울 커피 숭실대점"
        android:textColor="#000000"
        android:textSize="18.33sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="42.67dp" />

    <RelativeLayout
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_line_nor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18.67dp"
            android:fontFamily="@font/notosans"
            android:gravity="left|center_vertical"
            android:hint="성명"
            android:textColorHint="#585858"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/textview_manager_qr_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18.67dp"
            android:fontFamily="@font/notosans"
            android:gravity="right|center_vertical"
            android:text="이*진"
            android:textColor="#000000"
            android:textSize="13.33sp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10.67dp" />

    <RelativeLayout
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_line_nor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18.67dp"
            android:fontFamily="@font/notosans"
            android:gravity="left|center_vertical"
            android:hint="ID"
            android:textColorHint="#585858"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/textview_manager_qr_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18.67dp"
            android:fontFamily="@font/notosans"
            android:gravity="right|center_vertical"
            android:text="miginlee"
            android:textColor="#000000"
            android:textSize="13.33sp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.00dp" />

    <Button
        android:id="@+id/button_manager_qr_ok"
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_b_nor"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="13.33sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="288.67dp" />
</LinearLayout>