<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="306.33dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68.33dp">

        <Button
            android:id="@+id/close_drawer_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16.00dp"
            android:background="@drawable/btn_del" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104.33dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:text="이미진"
                android:textColor="#000000"
                android:textSize="18.33dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:text=" 님"
                android:textColor="#000000"
                android:textSize="18.33dp" />

            <Button
                android:id="@+id/button_drawer_mypage"
                android:layout_width="25.00dp"
                android:layout_height="25.00dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_name_edit" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <Button
        android:id="@+id/button_drawer_mystamp"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:layout_marginStart="20.33dp"
        android:background="#00ffffff"
        android:fontFamily="@font/notosans"
        android:gravity="left|center_vertical"
        android:text="마이 스탬프 보기"
        android:textSize="15.33dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <Button
        android:id="@+id/button_drawer_buy"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:layout_marginStart="20.33dp"
        android:background="#00ffffff"
        android:fontFamily="@font/notosans"
        android:gravity="left|center_vertical"
        android:text="쿠폰 사러 가기"
        android:textSize="15.33dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <Button
        android:id="@+id/button_drawer_coupon"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:layout_marginStart="20.33dp"
        android:background="#00ffffff"
        android:fontFamily="@font/notosans"
        android:gravity="left|center_vertical"
        android:text="보유 쿠폰 보러 가기"
        android:textSize="15.33dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#dedddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_drawer_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26.67dp"
            android:background="#00000000"
            android:fontFamily="@font/notosans"
            android:text="로그아웃"
            android:textColor="#a3a3a3"
            android:textSize="15.33sp" />
    </RelativeLayout>
</LinearLayout>