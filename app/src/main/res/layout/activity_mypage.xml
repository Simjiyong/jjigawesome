<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#f6f6f6"
    android:orientation="vertical"
    tools:context="kr.co.company.jjigawesome.SignUpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_mypage"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_mypage_back"
            android:layout_width="21.33dp"
            android:layout_height="21.33dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/textview_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosans"
            android:text="마이페이지"
            android:textColor="#000000"
            android:textSize="15.33dp" />

        <Button
            android:id="@+id/button_mypage_qrcode"
            android:layout_width="21.33dp"
            android:layout_height="21.33dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="18.67dp"
            android:layout_toLeftOf="@id/button_mypage_menu"
            android:background="@drawable/btn_qrcode" />

        <Button
            android:id="@+id/button_mypage_menu"
            android:layout_width="21.33dp"
            android:layout_height="21.33dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22.00dp"
            android:background="@drawable/btn_menu" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="43.33dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="26.67dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_mypage_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosans"
            android:text="이미진"
            android:textSize="18.33sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosans"
            android:text="님"
            android:textSize="18.33sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54.33dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_mypage_email"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/notosans"
            android:text="mijinlee@gmail.com"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/textview_mypage_phone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/notosans"
            android:text="+82 10-27**-46**"
            android:textSize="13.33sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="34.00dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:background="#ffffff"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:background="#ffffff"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20.00dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26.67dp">

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>