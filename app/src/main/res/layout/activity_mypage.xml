<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.company.jjigawesome.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout_mypage"
            android:layout_width="match_parent"
            android:layout_height="68.33dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_mypage_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_back" />

            <TextView
                android:id="@+id/textview_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/notosans"
                android:text="마이페이지"
                android:textColor="#000000"
                android:textSize="15.33dp" />

            <Button
                android:id="@+id/button_mypage_qrcode"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="18.67dp"
                android:layout_toLeftOf="@id/button_mypage_menu"
                android:background="@drawable/btn_qrcode" />

            <Button
                android:id="@+id/button_mypage_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22.00dp"
                android:background="@drawable/btn_menu" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="43.33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40.67dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_mypage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:gravity="center|top"
                android:text="이미진"
                android:textColor="#000000"
                android:textSize="18.33sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:gravity="center|top"
                android:text="님"
                android:textColor="#000000"
                android:textSize="18.33sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60.33dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_mypage_email"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/notosans"
                android:text="mijinlee@gmail.com"
                android:textColor="#000000"
                android:textSize="13.33sp" />

            <TextView
                android:id="@+id/textview_mypage_phone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/notosans"
                android:text="+82 10-27**-46**"
                android:textColor="#000000"
                android:textSize="13.33sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="34.00dp" />

        <RelativeLayout
            android:id="@+id/button_mypage_change_name"
            android:layout_width="match_parent"
            android:layout_height="68.33dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20.33dp"
                android:fontFamily="@font/notosans"
                android:text="닉네임 수정"
                android:textColor="#000000"
                android:textSize="15.33dp" />

            <Button
                android:layout_width="21.33dp"
                android:layout_height="21.33dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30.00dp"
                android:background="@drawable/btn_arrow_01" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#b2b2b2" />

        <RelativeLayout
            android:id="@+id/button_mypage_change_password"
            android:layout_width="match_parent"
            android:layout_height="68.33dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20.33dp"
                android:fontFamily="@font/notosans"
                android:text="비밀번호 수정"
                android:textColor="#000000"
                android:textSize="15.33dp" />

            <Button
                android:layout_width="21.33dp"
                android:layout_height="21.33dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30.00dp"
                android:background="@drawable/btn_arrow_01" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20.00dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="26.67dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />
</android.support.v4.widget.DrawerLayout>