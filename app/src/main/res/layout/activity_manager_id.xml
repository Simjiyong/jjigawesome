<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.company.jjigawesome.ManagerActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_manager_id"
        android:layout_width="match_parent"
        android:layout_height="68.33dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/button_manager_id_back"
            android:layout_width="21.33dp"
            android:layout_height="21.33dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_back" />
        <TextView
            android:id="@+id/textview_manager_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosans"
            android:text="매니저 회원"
            android:textColor="#000000"
            android:textSize="15.33sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#b2b2b2"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="43.33dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:fontFamily="@font/notosans"
        android:textStyle="bold"
        android:textSize="18.33sp"
        android:textColor="#000000"

        android:text="서울 커피 숭실대점"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="42.67dp" />
    <EditText
        android:id="@+id/edittext_manager_id_name"
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_line_nor"
        android:fontFamily="@font/notosans"
        android:hint="성명"
        android:inputType="textPersonName"
        android:paddingLeft="18.33dp"
        android:textColorHint="#cacaca"
        android:textSize="13.33dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10.67dp" />
    <EditText
        android:id="@+id/edittext_manager_id_email"
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_line_nor"
        android:fontFamily="@font/notosans"
        android:hint="이메일 또는 아이디"
        android:paddingLeft="18.33dp"
        android:textColorHint="#cacaca"
        android:textSize="13.33dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20.00dp" />

    <Button
        android:id="@+id/button_manager_id_ok"
        android:layout_width="290.33dp"
        android:layout_height="46.33dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_b_nor"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:textSize="13.33sp"
        android:text="확인"
        android:textColor="#ffffff"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="288.67dp" />
</LinearLayout>