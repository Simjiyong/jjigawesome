<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:id="@+id/drawer_layout_change_name"
    tools:context="kr.co.company.jjigawesome.ChangeNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout_change_name"
            android:layout_width="match_parent"
            android:layout_height="68.33dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_change_name_back"
                android:layout_width="21.33dp"
                android:layout_height="21.33dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_back" />

            <TextView
                android:id="@+id/textview_change_name_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/notosans"
                android:text="마이페이지"
                android:textColor="#000000"
                android:textSize="15.33dp" />

            <Button
                android:id="@+id/button_change_name_qrcode"
                android:layout_width="21.33dp"
                android:layout_height="21.33dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="18.67dp"
                android:layout_toLeftOf="@id/button_change_name_menu"
                android:background="@drawable/btn_qrcode" />

            <Button
                android:id="@+id/button_change_name_menu"
                android:layout_width="21.33dp"
                android:layout_height="21.33dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22.00dp"
                android:background="@drawable/btn_menu" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#b2b2b2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20.00dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35.37dp"
            android:fontFamily="@font/notosans"
            android:textColor="#000000"
            android:textSize="13.33dp"
            android:text="수정할 닉네임을 입력해주세요."/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12.37dp" />
        <EditText
            android:id="@+id/edit_change_name"
            android:layout_width="290.33dp"
            android:layout_height="46.33dp"
            android:background="@drawable/btn_line_nor"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:paddingLeft="18.33dp"
            android:textColorHint="#cacaca"
            android:textColor="#000000"
            android:hint="닉네임"
            android:textSize="13.33dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10.67dp" />
        <Button
            android:id="@+id/button_change_name_ok"
            android:layout_width="290.33dp"
            android:layout_height="46.33dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_b_nor"
            android:fontFamily="@font/notosans"
            android:gravity="center"
            android:textSize="13.33sp"
            android:text="확인"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <include layout="@layout/activity_drawer" />
</android.support.v4.widget.DrawerLayout>